#!/bin/bash

set -euo pipefail

[ -n "${DEBUG:-}" ] && set -x

FIGLET_FONTS_DIR="$(find $(figlet -I2) -type d -name fonts)"
if [ -z "${FIGLET_FONTS_DIR:-}" ]; then
  echo "No figlet fonts found!" >&2 && exit 1
fi

function usage() {
  echo "Usage: $0 [-m|--message <message>] [-f|--font <font>] [-d|--display] [-p|--print] [-D|--demo]" >&2
}

CHOICES=(
  "3d_diagonal.flf" "3d.flf" "3d_diagonal.flf" "amc_aaa01.flf" "ansi_regular.flf" "ansi_shadow.flf"
  "big_money-ne.flf" "bloody.flf" "bolger.flf" "calvin_s.flf" "dos_rebel.flf" "delta_corps_priest_1.flf"
  "elite.flf" "filter.flf" "georgia11.flf" "nscript.flf" "the_edge.flf" "amcaaa01.flf" "basic.flf"
  "broadway.flf" "colossal.flf" "doh.flf" "fraktur.flf" "kompaktblk.flf" "larry3d.flf" "maxiwi.flf"
  "miniwi.flf" "nancyj-fancy.flf" "nancyj-underlined.flf" "nv_script.flf" "o8.flf" "poison.flf"
  "roman.flf" "rowancap.flf" "rozzo.flf" "sblood.flf" "stencil.flf" "thick.flf" "univers.flf" "whimsy.flf"
)

# prints a message with a figlet font
function print_message() {
  local message="$1"
  local choice="${2:-}"

  if [[ -z "$choice" ]]; then
    choice="${CHOICES[ $RANDOM % ${#CHOICES[@] }]}"
  fi

  # figlet - use specific font file, set width to terminal and center the text
  # lolcat - randomize the horizontal freq, and force colour always
    # -w "$(tput cols)" -c \
  printf "%s" "$message" \
    | figlet -f "$choice" \
    | lolcat -h "0.$[ $RANDOM % 10 ]" -f
}

# prints a message with a figlet font, centered using padding above/below the message
function display_message() {
  local message="$1"
  local choice="${2:-}"

  local msg=$(print_message "$message" "$choice")
  local n_lines=$(echo "$msg" | wc -l)

  local padding=$[ $[ $(tput lines) - $n_lines ] / 2 ]

  # display the figlet message, with padding above/below
  clear
  for _ in $(seq 0 $padding); do echo ; done
  printf "%s" "$msg"
  for _ in $(seq 0 $padding); do echo ; done
}

# cycles through each chosen figlet font displaying the message. press any key to continue
function demo_message() {
  local message="$1"
  local idx=1
  for f in "${CHOICES[@]}"; do
    display_message "$message" "$f"
    printf \
      "\e[1m%s %s\e[0m\e[3m, %s\e[0m" \
      [$idx/${#CHOICES[@]}] $f "press any key to continue..."
    read -n1 -s -r
    idx=$((idx+1))
  done
}

display= print= demo= msg= font=
while test $# -gt 0; do
  case "$1" in
    -h|--help)    usage; exit 0 ;;
    -d|--display) display=1; shift; msg="$1"; shift ;;
    -p|--print)   print=1;   shift; msg="$1"; shift ;;
    -f|--font)               shift; font="$1"; shift ;;
    -D|--demo)    demo=1;    shift; msg="${1:-Hello World!}"; shift;;
    *)
      echo "Wrong arg: $1" >&2; usage; exit 1 ;;
  esac
done

if   [[ -n "$demo" ]];    then demo_message "$msg"
elif [[ -n "$display" ]]; then display_message "$msg" "$font"
elif [[ -n "$print" ]];   then print_message "$msg" "$font"
else echo "No action specified" >&2; usage; exit 1
fi
