# Aesthetics ++++++++++++++++++++++++++++++++++++

# border text font & size
# (size 10 seems to be viewable on a 4K screen without squinting)
font pango:DejaVu Sans Mono 8

# border colours
# class                 border  backgr. text    indicator child_border
client.focused_inactive #000000 #000000 #d9d9d9 #0d1010 #000000
client.unfocused        #000000 #000000 #d9d9d9 #424242 #000000
client.focused          #212121 #212121 #ffffff #d9d9d9 #212121

# Custom program keybindings ++++++++++++++++++++

# modifier is the "Super" key
set $mod Mod4

# Program launchers -----------------------------

# kill a program with mouse cursor
bindsym --release $mod+Shift+x exec xkill
# kill focused window
bindsym $mod+Shift+q kill

# kitty with tmux
bindsym $mod+t exec alacritty -e 'tmux'
# kitty without tmux
bindsym $mod+Shift+t exec alacritty
# start running Stone Story RPG
bindsym --release $mod+Shift+s exec xdg-open steam://rungameid/603390
# night-mode
bindsym $mod+Shift+u exec redshift -PO 3200K

# - menu/launcher -------------------------------
# j4-dmenu (desktop app launcher)
bindsym $mod+space exec --no-startup-id j4-dmenu-desktop
# dmenu (minimal launcher)
bindsym $mod+Shift+space exec dmenu_run
# extendo variant (fuzzy matching)
bindsym $mod+Return exec dmenu_extended_run

# Orientation & Navigation ----------------------

# Super + directional arrows to navigate
bindsym $mod+Left focus left
bindsym $mod+Down focus down
bindsym $mod+Up focus up
bindsym $mod+Right focus right

# Shift variant of navigate used to move/swap panes
bindsym $mod+Shift+Left move left
bindsym $mod+Shift+Down move down
bindsym $mod+Shift+Up move up
bindsym $mod+Shift+Right move right

# split in horizontal/vertical orientation
bindsym $mod+h split h
bindsym $mod+v split v

# Fullscreen/floating modes ---------------------

# use Mouse+$mod to drag floating windows to their wanted position
floating_modifier $mod

# enter fullscreen/floating modes
bindsym $mod+f fullscreen toggle
bindsym $mod+Shift+f floating toggle

# change container layout (stacked, tabbed, toggle split)
bindsym $mod+s layout stacking
bindsym $mod+w layout tabbed
bindsym $mod+e layout toggle split

# change focus between tiling / floating windows
bindsym $mod+g focus mode_toggle

# focus the parent container
bindsym $mod+a focus parent
# focus the child container
bindsym $mod+d focus child

# Workspaces ------------------------------------

# switch workspace
bindsym $mod+1 workspace "1"
bindsym $mod+2 workspace "2"
bindsym $mod+3 workspace "3"
bindsym $mod+4 workspace "4"
bindsym $mod+5 workspace "5"
bindsym $mod+6 workspace "6"
bindsym $mod+7 workspace "7"
bindsym $mod+8 workspace "8"
bindsym $mod+9 workspace "9"
bindsym $mod+0 workspace "10"

# switch workspaces left/right
bindsym $mod+l workspace next
bindsym $mod+k workspace prev

# move focused container to workspace
bindsym $mod+Shift+1 move container to workspace "1"
bindsym $mod+Shift+2 move container to workspace "2"
bindsym $mod+Shift+3 move container to workspace "3"
bindsym $mod+Shift+4 move container to workspace "4"
bindsym $mod+Shift+5 move container to workspace "5"
bindsym $mod+Shift+6 move container to workspace "6"
bindsym $mod+Shift+7 move container to workspace "7"
bindsym $mod+Shift+8 move container to workspace "8"
bindsym $mod+Shift+9 move container to workspace "9"
bindsym $mod+Shift+0 move container to workspace "10"

# Restarting & Reloading ------------------------

# reload the configuration file
bindsym $mod+Shift+y reload
# restart i3 inplace (preserves your layout/session, can be used to upgrade i3)
bindsym $mod+Shift+r restart
# exit i3 (logs you out of your X session)
bindsym $mod+Shift+e exec "i3-nagbar -t warning -m 'You pressed the exit shortcut. Do you really want to exit i3? This will end your X session.' -B 'Yes, exit i3' 'i3-msg exit'"
# lock screen
bindsym $mod+Shift+l exec i3lock -c 000000
# wake up screen
bindsym $mod+Shift+j exec xset dpms force on

# Custom functions ++++++++++++++++++++++++++++++

# resize window (you can also use the mouse for that)
mode "resize" {
  # these bindings trigger as soon as you enter the resize mode

  # up/left will shrink the window’s width
  bindsym Up resize shrink height 10 px or 10 ppt
  bindsym Left resize shrink width 10 px or 10 ppt
  # down/right will grow the window’s width
  bindsym Down resize grow height 10 px or 10 ppt
  bindsym Right resize grow width 10 px or 10 ppt

  # Escape/Return will exit resize mode
  bindsym Escape mode "default"
  bindsym Return mode "default"
}
bindsym $mod+r mode "resize"

# Start running these commands ++++++++++++++++++

# display a workspace bar & available system information
bar {
  status_command i3status --config $HOME/.config/i3status/i3status.conf
}

# Ensure that services are started ++++++++++++++

# ensure that gnome settings/dark mode works
exec --no-startup-id '/usr/libexec/gsd-xsettings'
exec --no-startup-id 'gsettings set org.gnome.desktop.interface color-scheme prefer-dark'
exec --no-startup-id 'gsettings set org.gnome.desktop.interface gtk-theme Pop-dark'

# network manager applet
exec --no-startup-id nm-applet
# bluetooth tray applet
exec --no-startup-id blueman-applet

# launch with an internet browser & a terminal
exec --no-startup-id alacritty -e '/home/freman/bin/tmon'
exec --no-startup-id google-chrome
exec --no-startup-id '/home/freman/bin/ts-os set dark'

