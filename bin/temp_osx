#!/bin/bash

function temp() {
  reading="$(istats ${@} --no-graphs --no-labels | tr -d '[:space:]')"
  echo "${reading%?}" # Truncate the C from the end of the temperature
}
export -f temp

gpu=$(temp 'extra TG0D')
cpu=$(temp 'cpu temp')
pipe=$(temp 'extra Th1H')

echo -en "${cpu} / ${gpu} / ${pipe}"

