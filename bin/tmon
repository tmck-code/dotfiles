#!/bin/bash

# create a new session. Note the -d flag, we do not want to attach just yet!
tmux new-session -s "dev" -n "mon" -d

tmux send-keys -t dev:mon 'htop' C-j

tmux split-window -v -p 80
tmux send-keys -t dev:mon 'gotop -m -a -p --rate 0.5' C-j

tmux split-window -h
tmux send-keys -t dev:mon 'sleep 1 && slurm -i en0 -t foo' C-j

# # finally attach to the session
tmux attach -t dev:mon

